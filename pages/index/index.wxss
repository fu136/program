/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
swiper{
  height:700 rpx;
}
swiper image{
  width:100%;
  height:100%;
}
#news-list{
  min-height: 400rpx;
  padding:15rpx;
}
.list-item{
  display:flex;
  flex-direction: row;
  border-bottom:1px solid gray;
}
.list-item image{
  width:230rpx;
  height:150rpx;
  margin:10rpx;
}
.new-title{
  width:100%;
  display:block;
  line-height:60px;
  font-size:10pt;
}